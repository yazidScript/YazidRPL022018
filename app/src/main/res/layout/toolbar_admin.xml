<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbarAdmin"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryDark"
    android:layout_height="?actionBarSize"
    android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_bike"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_32sdp"
            android:tint="@color/colorAccent"
            android:visibility="gone"
            android:src="@drawable/bicycle"
            android:layout_gravity="start|center_vertical" />

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_32sdp"
            android:tint="@color/colorAccent"
            android:visibility="gone"
            android:src="@drawable/biker"
            android:layout_gravity="start|center_vertical" />

        <com.example.yazid12rpl02.ui.CustomTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16ssp"
            android:text="RENTAL SEPEDA"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_more_admin"
        android:layout_width="@dimen/_28ssp"
        android:layout_height="@dimen/_32sdp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginRight="@dimen/_16ssp"
        android:tint="@color/colorAccent"
        android:src="@drawable/ic_baseline_person_24" />

</androidx.appcompat.widget.Toolbar>
