<?xml version="1.0" encoding="utf-8" ?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff"
    android:paddingTop="@dimen/_6ssp"
    android:paddingLeft="@dimen/_6ssp"
    android:paddingRight="@dimen/_6ssp"
    android:paddingBottom="0sp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30sp"
        android:layout_margin="0dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="0sp">

            <!--ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="12dp"
                android:src="@drawable/logo_square" /-->

            <com.example.yazid12rpl02.ui.CustomTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="PROFIL"
                android:textColor="@color/colorPrimary"
                android:textSize="13.8sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:paddingRight="18sp"
            android:paddingLeft="18sp"
            android:id="@+id/divClose">

            <ImageView
                android:layout_width="@dimen/_16ssp"
                android:layout_height="@dimen/_16ssp"
                android:src="@drawable/ic_close_black_24dp"
                android:tint="#c5c5c5"/>
        </LinearLayout>
    </RelativeLayout>

    <!--ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:src="@drawable/logo_horizontal_1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0sp"
        android:layout_gravity="center"/-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/divHeaderLogin"
                android:visibility="visible"
                android:layout_marginTop="0sp"
                android:layout_marginBottom="5sp"
                android:paddingLeft="@dimen/_8ssp">

                <ImageView
                    android:layout_width="@dimen/_24ssp"
                    android:layout_height="@dimen/_24ssp"
                    android:src="@drawable/bike"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8sp">

                    <com.example.yazid12rpl02.ui.CustomTextViewBold
                        android:id="@+id/tvUserID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="0dp"
                        android:background="#00000000"
                        android:gravity="top|left"
                        android:textColor="@color/colorAccent"
                        android:textSize="15.4sp"
                        android:textStyle="bold"
                        android:text="User ID"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8sp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_baseline_person_24"
                    android:tint="#b1b1b1"
                    android:layout_gravity="top"/>

                <View
                    android:layout_width="0.6dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="0sp"
                    android:layout_marginLeft="8sp"
                    android:background="#b1b1b1"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.example.yazid12rpl02.ui.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nama Lengkap"
                            android:textSize="11.7sp"
                            android:textColor="#4E4E4E"/>

                        <com.example.yazid12rpl02.ui.CustomTextViewLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="5sp"
                            android:textColor="#c62828"/>
                    </LinearLayout>

                    <com.example.yazid12rpl02.ui.CustomEditTextLight
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#00000000"
                        android:gravity="top|left"
                        android:hint="Masukkan nama..."
                        android:inputType="textCapCharacters"
                        android:textColor="#252525"
                        android:textSize="12.4sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="62sp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8sp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_phone_black_24dp"
                    android:tint="#b1b1b1"
                    android:layout_gravity="top"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.example.yazid12rpl02.ui.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nomor Ponsel Aktif"
                            android:textSize="11.7sp"
                            android:textColor="#4E4E4E"/>

                        <com.example.yazid12rpl02.ui.CustomTextViewLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="5sp"
                            android:textColor="#c62828"/>
                    </LinearLayout>

                    <com.example.yazid12rpl02.ui.CustomEditTextLight
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="10dp"
                        android:background="#00000000"
                        android:gravity="top|left"
                        android:hint="Masukkan nomor ponsel..."
                        android:inputType="phone"
                        android:textColor="#252525"
                        android:textSize="12.4sp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_160sdp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="8sp"
                android:visibility="visible">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_insert_drive_file_black_24dp"
                    android:tint="#b1b1b1"
                    android:layout_gravity="top"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.example.yazid12rpl02.ui.CustomTextViewRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KTP"
                            android:textSize="11.7sp"
                            android:textColor="#4E4E4E"/>

                        <com.example.yazid12rpl02.ui.CustomTextViewLight
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="*"
                            android:layout_marginLeft="5sp"
                            android:textColor="#c62828"/>
                    </LinearLayout>

                    <ImageView
                        android:src="@drawable/ic_image_black_24dp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_120sdp"/>

                </LinearLayout>
            </LinearLayout>

            <com.example.yazid12rpl02.ui.CustomTextViewLight
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* Untuk menyimpan perubahan, perangkat HARUS tersambung internet"
                android:layout_marginLeft="12sp"
                android:layout_marginRight="12sp"
                android:layout_marginTop="3sp"
                android:textSize="10dp"
                android:textColor="#c62828"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="4.3dp"
                    android:layout_marginRight="4.3dp"
                    android:orientation="horizontal"
                    android:paddingLeft="0dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/bg_rectangle_1"
                    android:id="@+id/divUpdate">

                    <com.example.yazid12rpl02.ui.CustomTextViewBold
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="SIMPAN"
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/_10ssp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#000"
                        android:letterSpacing="0.1"
                        android:textStyle="bold"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="4.3dp"
                    android:layout_marginRight="4.3dp"
                    android:orientation="horizontal"
                    android:paddingLeft="0dp"
                    android:paddingBottom="12dp"
                    android:paddingTop="12dp"
                    android:background="@drawable/bg_rectangle_2"
                    android:id="@+id/divLogout">

                    <com.example.yazid12rpl02.ui.CustomTextViewBold
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:text="LOGOUT"
                        android:textColor="#000"
                        android:textSize="@dimen/_10ssp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>